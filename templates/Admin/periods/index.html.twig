{% extends 'base.html.twig' %}

{% block title %}Liste des Périodes{% endblock %}

{% block body %}
<main>
    <section class="container py-5">
        <h1 class="text-center my-4">Liste des périodes historiques</h1>

        <div class="d-flex justify-content-between my-4">
            <a href="{{ path('app_admin_events_index') }}" class="btn btn-primary" title="Revenir à la liste des évènements historiques">
                <i class="fas fa-arrow-left"></i> Revenir aux évènements
            </a>
            <a href="{{ path('app_admin_periods_new') }}" class="btn btn-primary" title="Créer une nouvelle période historique">
                <i class="fas fa-plus"></i> Nouvelle période
            </a>
        </div>

        <table class="table table-striped table-bordered my-4">
            <thead class="table-light">
                <tr>
                    <th>Nom de la période historique</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for period in periods %}
                <tr>
                    <td>{{ period.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_periods_show', {'id': period.id}) }}" class="btn btn-sm btn-info mx-2" title="Voir">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_admin_periods_edit', {'id': period.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucune période historique ne figure dans la base de données</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>
{% endblock %}