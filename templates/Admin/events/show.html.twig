{% extends 'base.html.twig' %}

{% block title %}Détails de l'évènement{% endblock %}

{% block body %}
<main>
    <section class="container py-5">
        <h1 class="text-center my-4">Détails de l'évènement historique</h1>

        <a href="{{ path('app_admin_events_index') }}" class="btn btn-primary my-4" title="Revenir à la liste des évènements historiques"><i class="fas fa-arrow-left"></i> Revenir à la liste des évènements</a>
    
        <table class="table table-striped table-bordered my-4">
            <tbody>
                <tr>
                    <th>Date de l'évènement historique</th>
                    <td>{{ event.chronos }}</td>
                </tr>
                <tr>
                    <th>Nom de l'évènement historique</th>
                    <td>{{ event.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.content }}</td>
                </tr>
            </tbody>
        </table>
    
        {{ include('admin/events/_delete_form.html.twig') }}
    </section>
</main>
{% endblock %}
